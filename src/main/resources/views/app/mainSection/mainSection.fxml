<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainSection_root_container" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <HBox>
            <fx:include source="profile/profileSection.fxml" />
            <Separator orientation="VERTICAL" />
            <BorderPane.margin>
                <Insets right="10.0" />
            </BorderPane.margin>
        </HBox>
    </left>
    <center>
        <TabPane>
            <Tab fx:id="searchTab" closable="false" text="Búsqueda de películas">
                <BorderPane fx:id="mainSection_search_result_container">
                    <top>
                        <fx:include source="searchBar.fxml" />
                    </top>
                    <center>
                        <fx:include source="searchSection.fxml" />
                    </center>
                    <BorderPane.margin>
                        <Insets bottom="10.0" right="10.0" />
                    </BorderPane.margin>
                </BorderPane>
            </Tab>
            <Tab fx:id="adminTab" closable="false" text="Opciones administrativas">
                <BorderPane fx:id="mainSection_admin_container">
                    <top>
                        <Label fx:id="admin_options_label" text="Sección administrativa" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets top="20.0" />
                     </BorderPane.margin></Label>
                    </top>
                </BorderPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
